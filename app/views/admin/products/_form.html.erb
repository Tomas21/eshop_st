
<%= form_for [:admin, @product], html: {class: "form-horizontal"} do |f| %>

<div class="form-group">    
  <%= f.label :name, "názov", class: "col-sm-2 control-label"  %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control"  %>
  </div>
</div>

<div class="form-group"> 
  <%= f.label :description, "popis", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :description, class: "form-control"  %>
  </div>
</div>

<div class="form-group"> 
  <%= f.label :price, "predajná cena", class: "col-sm-2 control-label"   %>
  <div class="col-sm-10">
    <%= f.text_field :price, class: "form-control"  %>
  </div>
</div>

<div class="form-group"> 
  <%= f.label :image_url, "photo", class: "col-sm-2 control-label"   %>
  <div class="col-sm-10">
    <%= f.text_field :image_url, class: "form-control"  %>
  </div>
</div>



  <%= f.submit "Uložiť" %>
<% end %>